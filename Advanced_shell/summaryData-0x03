#!/bin/bash

INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# CSV header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Loop through JSON files and extract info
for FILE in "$INPUT_DIR"/*.json; do
    NAME=$(jq -r '.name' "$FILE" | sed 's/.*/\u&/')
    HEIGHT=$(jq -r '.height' "$FILE" | awk '{print $1/10}')
    WEIGHT=$(jq -r '.weight' "$FILE" | awk '{print $1/10}')
    echo "$NAME,$HEIGHT,$WEIGHT" >> "$OUTPUT_FILE"
done

echo "CSV Report generated at: $OUTPUT_FILE"
echo

# Print report contents
cat "$OUTPUT_FILE"
echo

# Calculate averages with awk
awk -F, 'NR>1 {h+=$2; w+=$3; c++} END {print "\nAverage Height: " h/c " m"; print "Average Weight: " w/c " kg"}' "$OUTPUT_FILE"

